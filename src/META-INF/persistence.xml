<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MiniTalabatePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>bean.Adresse</class>
    <class>bean.Categorie</class>
    <class>bean.Client</class>
    <class>bean.Food</class>
    <class>bean.Ingredient</class>
    <class>bean.LignePanier</class>
    <class>bean.Owner</class>
    <class>bean.Panier</class>
    <class>bean.Restaurant</class>
    <class>bean.Supplement</class>
    <class>bean.LigneSupplement</class>
    <class>bean.PricingSupplement</class>
    <class>bean.PricingFood</class>
    <class>bean.Composition</class>
    <class>bean.Favoris</class>
    <class>bean.Administrateur</class>
    <class>bean.NewEntity</class>
    <class>bean.Carte</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/minitalabate?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
